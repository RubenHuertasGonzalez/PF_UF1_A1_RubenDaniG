<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonEnviarDades"
        android:layout_width="208dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:text="@string/buttonEnviarDades"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextCodi"
        app:layout_constraintStart_toStartOf="@+id/editTextTextCodi"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextCodi" />

    <EditText
        android:id="@+id/editTextTextCodi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/posar_codi"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor,TextContrastCheck" />

    <TextView
        android:id="@+id/textViewTitol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="32dp"
        android:text="@string/textviewTitol"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageViewIconoPeli"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewIconoPeli"
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:layout_marginBottom="355dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitol"
        app:srcCompat="@drawable/iconopeli"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>